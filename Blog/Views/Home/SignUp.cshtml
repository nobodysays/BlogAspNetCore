@{
    Layout = "_NonAuthorizedLayout";
}
@model Blog.ViewModels.UserViewModel
<div class="container mt-5">
    <div class="list-group-item col-md-8 mx-auto">
        <form asp-action="SignUp" asp-controller="Home" method="post">
            <h2>Sign Up</h2>
            <div class="form-group">
                <label >Username</label>
                <input class="form-control" asp-for="Username"  placeholder="Enter username">
                <small class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>